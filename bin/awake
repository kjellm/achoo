#! /usr/bin/env ruby

require 'achoo/awake'
require 'optparse'

def main
  awake = Achoo::Awake.new
  
  options = {
    :all => false,
  }

  optparse = OptionParser.new do|opts|
    opts.banner = "Usage: $0 [options]"

    opts.on( '-a', '--all', 'FIX' ) do
      options[:all] = true
    end
  end

  optparse.parse!

  if options[:all]
    awake.all
  else
    awake.at(Date.today)
  end
end

main
